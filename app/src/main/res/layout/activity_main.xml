<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light Bulb"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvLightStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading status..."
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnLightOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn On"/>

        <Button
            android:id="@+id/btnLightOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn Off"/>

        <EditText
            android:id="@+id/etColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter color (e.g., red)"
            android:inputType="text"/>

        <Button
            android:id="@+id/btnSetColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Color"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Door Control"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tvDoorStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading status..."
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnDoorOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Door"/>

        <Button
            android:id="@+id/btnDoorClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Door"/>

        <Button
            android:id="@+id/btnDoorLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lock Door"/>

        <Button
            android:id="@+id/btnDoorUnlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock Door"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conditioner"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tvConditionerStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading status..."
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnCondOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn On"/>

        <Button
            android:id="@+id/btnCondOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn Off"/>

        <EditText
            android:id="@+id/etTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Temp (13-31)"
            android:inputType="number"/>

        <Button
            android:id="@+id/btnSetTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Temperature"/>

    </LinearLayout>
</ScrollView>